@model AV1.Models.ClienteViewModel

<h1>Cadastro de Clientes</h1>

<form asp-action="Novo">
    <div class="card">
        <div class="card-header">Dados do Cliente</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <label asp-for="Nome"></label>
                    <input type="text" asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-sm-12">
                    <label asp-for="Cpf"></label>
                    <input type="text" asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-sm-12">
                    <label asp-for="Sexo"></label>
                    <select asp-for="Sexo" class="form-control">
                        <option>Selecione</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Feminino">Feminino</option>
                        <option value="Outros">Outros</option>
                    </select>
                </div>
                <div class="col-md-6 col-sm-12">
                    <label asp-for="Endereco"></label>
                    <input type="text" asp-for="Endereco" class="form-control" />
                </div>
                <div class="col-md-6 col-sm-12">
                    <label asp-for="Numero"></label>
                    <input type="text" asp-for="Numero" class="form-control" />
                </div>
                <div class="col-md-6 col-sm-12">
                    <label asp-for="Bairro"></label>
                    <input type="text" asp-for="Bairro" class="form-control" />
                </div>
                <div class="col-md-6 col-sm-12">
                    <label asp-for="Cep"></label>
                    <input type="text" asp-for="Cep" class="form-control" />
                </div>
                <div class="col-md-6 col-sm-12">
                    <label asp-for="Telefone"></label>
                    <input type="text" asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-2">
                        <input type="submit" value="Gravar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />

<div class="row">
    <div class="col-md-2">
        <a class="btn btn-dark" asp-controller="Cliente" asp-action="Index">Voltar</a>
    </div>
</div>